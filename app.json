{
  "expo": {
    "name": "Poke Nihongo",
    "slug": "Poke Nihongo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/PokeNihongoLogo.png",
    "scheme": "pokenihongo",
    "userInterfaceStyle": "automatic",
    "backgroundColor": "#FFFFFF",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Ứng dụng cần quyền truy cập microphone để ghi âm và luyện tập phát âm tiếng Nhật."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/PokeNihongoLogo.png"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MICROPHONE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/PokeNihongoLogo.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/PokeNihongoLogo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-secure-store",
      "expo-localization",
      [
        "expo-av",
        {
          "microphonePermission": "Allow Poke Nihongo to access your microphone."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
