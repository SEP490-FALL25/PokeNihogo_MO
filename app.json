{
  "expo": {
    "name": "Poke Nihongo",
    "slug": "Poke_Nihongo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/PokeNihongoLogo.png",
    "scheme": "pokenihongo",
    "userInterfaceStyle": "automatic",
    "backgroundColor": "#FFFFFF",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Ứng dụng cần quyền truy cập microphone để ghi âm và luyện tập phát âm tiếng Nhật.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "bundleIdentifier": "com.adminnn1.PokeNihongo"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/PokeNihongoLogo.png"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MICROPHONE",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "package": "com.adminnn1.PokeNihongo",
      "useCleartextTraffic": true 
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/PokeNihongoLogo.png"
    },
    "plugins": [
      "expo-router",
      
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true
          }
        }
      ],

      [
        "expo-splash-screen",
        {
          "image": "./assets/images/PokeNihongoLogo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-secure-store",
      "expo-localization",
      [
        "expo-av",
        {
          "microphonePermission": "Allow Poke Nihongo to access your microphone."
        }
      ],
      "./plugins/withAndroidXBrowserFix.js"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "21497a63-cf2c-46f5-ab42-139cada98a00"
      }
    }
  }
}